.dailyView{
    width: 100%;
    height: 100%;
    background: lightgray;
    opacity: 0;
}
.descriptionView{
    position: absolute;
    right: 0;
    left: 0;
    bottom: 0;
    height: 50%;
    color: white;
    display: flex;
    flex-direction: column;
    padding: 20px;
    opacity: 1
}
.topBar{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 64px;
    opacity: 0;
    z-index: 1;
}
.descriptionView>view{
    margin-top: 30px;
    display: flex;
    align-items: center
}
.descriptionView>.daily{
    display: flex;
    flex-direction: column;
    align-items: flex-start
}
.statusBar{
    width: 100%;
    height: 45rpx;
}
.navBar{
    display: flex;
    height: 44px;
    color: white
}
.navBar>view{
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center
}
.navBar>view:nth-child(1){
    padding-left: 10px;
    box-sizing: border-box
}
.navBar>view:nth-child(2){
    justify-content: center;
}
.desc_transition,.bar_transition{
    transition:  all 1s;
}
.desc_show{
    opacity: 0
}
.bar_show{
    opacity: 1
}

/* 日期列表 */

.dailyList{
    position: fixed;
    width: 100%;
    height: 280rpx;
    background: lightblue;
    z-index: 2;
    opacity: 0;
    color: white;
    transform:translateY(-280rpx);
}

.activeDailyList_transition{
    transition: all 1s;
}
.activeDailyList_show{
    opacity: 1;
    transform: translateY(0)
}
.titleBar{
    width: 100%;
    height: 100rpx;
    display: flex;
}
.titleBar>view{
    flex: 1;
    display: flex;
    align-items: center
}
.dailyBar{
    width: 100%;
    height: 140rpx;
}
.days{
    flex:1;
    display: flex;
    flex-direction: column;
    align-items: center
}
.dateCircle{
    width: 30px;
    height: 30px;
    border-radius: 50%;
    line-height: 30px;
    text-align: center;
    margin-bottom: 1px;
}
.showindex{
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: rgb(71, 71, 71)
}