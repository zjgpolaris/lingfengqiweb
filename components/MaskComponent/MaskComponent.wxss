.MaskView{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0
}
.mask_transition{
    transition: all 1s;
}
.mask_show{
    opacity: 1
}
.maskTop,.maskBottom{
    width: 100%;
    height: 50%;
    background: rgba(255,255,255,0)
}
.maskBottom{
    background: linear-gradient(rgba(255,255,255,.1),rgba(255,255,255,.3),rgba(255,255,255,0.5),rgba(255,255,255,.7),rgba(255,255,255,.9),rgba(255,255,255,.9),white)
}
